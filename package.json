{
  "name": "testmaker",
  "version": "0.0.3",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikola352/TestMaker"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build",
    "publish": "electron-builder build -p always"
  },
  "author": {
    "name": "Nikola Jolovic",
    "email": "nikolajolovic02@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^23.4.0"
  },
  "dependencies": {
    "ejs": "^3.0.2",
    "electron-updater": "^4.3.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "html-pdf": "^3.0.1",
    "jquery": "^3.4.1",
    "knex": "^2.5.0",
    "socket.io": "^2.3.0",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "id.nikola.test.maker",
    "productName": "Test Maker",
    "copyright": "Copyright Â© 2020 Nikola Jolovic",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico"
    }
  }
}
